<Application x:Class="ElevenRestoreFolders.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ElevenRestoreFolders"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="MyCheckBox" TargetType="{x:Type CheckBox}">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="150"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="4,0,0,0"/>
            <Setter Property="Content">
                <Setter.Value>
                    <DockPanel Background="#FFEEEEEE" Width="130" MaxWidth="Infinity">
                        <Image DockPanel.Dock="Top" Source="/Resources/imageres_198.ico" Margin="5"/>
                        <TextBlock DockPanel.Dock="Bottom" Text="Label" TextAlignment="Center"/>
                    </DockPanel>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
